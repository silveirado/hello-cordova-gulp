{
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": "src",
		"outDir": ".out",
		"baseUrl": "src",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"dom"
		]
	}
}